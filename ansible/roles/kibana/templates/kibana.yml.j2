# Kibana Configuration
# Managed by Ansible

server.port: 5601
server.host: "0.0.0.0"
server.name: "{{ ansible_hostname }}"

elasticsearch.hosts: ["http://{{ elasticsearch_host }}:9200"]
elasticsearch.username: "kibana_system"
elasticsearch.password: "{{ kibana_system_password | default('changeme') }}"

# Security (disabled for simplicity)
xpack.security.enabled: false
xpack.encryptedSavedObjects.encryptionKey: "{{ kibana_encryption_key | default('changemechangemechangemechangeme') }}"

# Monitoring
monitoring.ui.container.elasticsearch.enabled: true
monitoring.ui.container.logstash.enabled: true

# Logging
logging:
  appenders:
    console:
      type: console
      layout:
        type: json
  root:
    appenders: [console]
    level: info